{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}

<div class="container">
        <h5> Nom : {{ app.user.nom }}</h5>
        <h5> Prenom : {{ app.user.prenom }}</h5>
        <h5> EMAIL : {{ app.user.email }}</h5>
       
          <hr>
          <h3>Vos réservations </h3>
          <table class="table">
  <thead>
    <tr>
      <th scope="col">Total</th>
      <th scope="col">Voiture</th>
      <th scope="col">Date départ</th>
      <th scope="col">Date retour </th>
    </tr>
  </thead>
  <tbody>

  {% for row in app.user.reservations  %}
   <tr>
      <td>{{ row.prixTotal }} €</td>
      <td>{{ row.voiture.titre }}</td>
      <td>{{ row.dateDepart | date('Y/m/d') }}</td>
      <td>{{ row.dateretour | date('Y/m/d') }}</td>
    </tr>
      
  {% endfor %}
   
   
  </tbody>
</table>
 
</div>

{% endblock %}











